{
  "name": "pipeline-orchestrator",
  "version": "0.1.0",
  "private": true,
  "description": "Pipeline Orchestrator Monorepo - Medical research pipeline tools for Metro North Health / REdI",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint packages/core apps/researchplanner/src",
    "lint:all": "pnpm -r lint",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "build:packages": "pnpm --filter './packages/**' build",
    "build:apps": "pnpm --filter './apps/**' build",
    "test:packages": "pnpm --filter './packages/**' test",
    "test:apps": "pnpm --filter './apps/**' test",
    "docker:up": "docker compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f infrastructure/docker/docker-compose.yml down",
    "docker:dev": "docker compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.dev.yml up -d",
    "docker:monitoring": "docker compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.monitoring.yml up -d"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "keywords": [
    "medical-research",
    "pipeline",
    "n8n",
    "monorepo",
    "orchestration"
  ],
  "license": "MIT"
}
