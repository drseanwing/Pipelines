# =============================================================================
# Pipeline Orchestrator - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# See docs/adr/ADR-003-environment-variable-convention.md for naming convention

# =============================================================================
# SHARED INFRASTRUCTURE
# =============================================================================

# PostgreSQL (port 5810)
POSTGRES_USER=pipelines
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here
POSTGRES_DB=pipelines

# Redis (port 5811)
REDIS_PASSWORD=CHANGE_ME_redis_password

# Ollama (port 5812) - no auth
# OLLAMA_URL=http://ollama:11434

# External API Keys (shared across projects)
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME
OPENAI_API_KEY=sk-CHANGE_ME

# =============================================================================
# FOAM - Medical Education Content (ports 5815-5819)
# =============================================================================

FOAM_N8N_EMAIL=foam@pipelines.local
FOAM_N8N_PASSWORD=CHANGE_ME_foam_n8n_password
FOAM_N8N_ENCRYPTION_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32

# =============================================================================
# RESEARCHPLANNER / QI Pipeline (ports 5820-5829)
# =============================================================================

QI_N8N_ENCRYPTION_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
QI_N8N_JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
QI_N8N_API_KEY=CHANGE_ME_qi_n8n_api_key
QI_WEBHOOK_URL=https://qi-pipeline.metronorth.health.qld.gov.au

# QI Application
QI_JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_64
QI_SESSION_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_64
QI_LOG_LEVEL=info

# QI Email (optional)
QI_SMTP_HOST=smtp.health.qld.gov.au
QI_SMTP_PORT=587
QI_SMTP_USER=
QI_SMTP_PASSWORD=
QI_SMTP_SENDER=qi-pipeline@metronorth.health.qld.gov.au

# =============================================================================
# CRITLIT / SLR Pipeline (ports 5830-5839)
# =============================================================================

SLR_N8N_EMAIL=slr@pipelines.local
SLR_N8N_PASSWORD=CHANGE_ME_slr_n8n_password
SLR_N8N_ENCRYPTION_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
SLR_N8N_API_KEY=CHANGE_ME_slr_n8n_api_key

# =============================================================================
# MONITORING (ports 5813-5814, 5840-5842)
# =============================================================================

GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_grafana_password

# =============================================================================
# DEVELOPMENT TOOLS (dev profile only - ports 5823-5826)
# =============================================================================

# Redis Commander - HTTP Basic Auth
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=CHANGE_ME_redis_commander_password
